package desafiosAula08;
import java.util.Scanner;
public class desafio06 {

public static void main(String[] args) {

Scanner scanner = new Scanner(System.in);

System.out.println("Digite um número correspondente a um dos meses do ano (1 a 12): ");
int mes = scanner.nextInt();
String estacao = "";

switch (mes) {
    case 12:
    case 1:
    case 2:
estacao = "Verão";
break;

    case 3:
    case 4:
    case 5:
estacao = "Outono";
break;

    case 6:
    case 7:
    case 8:
estacao = "Inverno";
break;

    case 9:
    case 10:
    case 11:
estacao = "Primavera";
break;

default:
System.out.println("Mês inválido! ");
break;
}

System.out.println("A estação do Ano é: " + estacao);

             scanner.close();

        }
}
